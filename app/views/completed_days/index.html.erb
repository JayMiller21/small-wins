<h1>Progress on Your Habit</h1>

<%= link_to 'Log Completed Days', new_completed_day_path %>
<table>
  <tr>
    <th>Completed Days</th>
<!--     <th colspan="3"></th> -->
  </tr>
 
  <% @completed_days.each do |completed_day| %>
    <tr>
      <td><%= completed_day.date %></td>
      <td><%= link_to 'Delete', completed_day_path(completed_day),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

