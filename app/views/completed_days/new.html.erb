<h1>Log a Completed Day</h1>

<%= render 'form' %>
 
<%= link_to 'Back to My Current Chain', chains_path, :class => "btn btn-link" %>

<h1>Remove Completed Days</h1>

<table>
  <tr>
    <th>Completed Days</th>
<!--     <th colspan="3"></th> -->
  </tr>
 
  <% @completed_days.each do |completed_day| %>
    <tr>
      <td><%= completed_day.date %></td>
      <td><%= link_to 'Delete', completed_day_path(completed_day),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>