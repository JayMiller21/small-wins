<div class="panel panel-default" style="width:950px; margin-left:auto; margin-right:auto">
  
  <div class="panel-heading">
    <h3 class="panel-title"><%= link_to habit.name, edit_user_habit_path(current_user,habit.id) %></h3>
  </div>

  <% if !habit.chains[0].nil? %>
  
  <div class="panel-body">
    <div id=<%= habit.name.gsub(/\s/,"-") + "-timeline" %> style="height: 160px;"></div>  
  </div>

  <table class="table table-bordered">
    <tr style="width:100%">
      <td style="width:33.3%; text-align:center">
        Days This Calendar Year</br>
        <span style="font-weight: bold; font-size: 200%">
        <%= habit.days_this_year %> days</span>
      </td>
      <td style="width:33.3%; text-align:center">
        Longest Streak</br>
        <span style="font-weight: bold; font-size: 200%">
        <%= habit.longest_chain_length %> days</span>
      </td>
      <td style="width:33.3%; text-align:center">
        Current Streak</br>
        <span style="font-weight: bold; font-size: 200%">
        <%= habit.latest_chain_length %> days</span>
      </td>
    </tr>
  </table>

  <% else %>
  
  <div class="panel-body">
    <h4><%= @no_chains_message %></h4>
  </div>

  <% end %>

</div>