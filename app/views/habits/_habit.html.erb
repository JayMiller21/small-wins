<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= link_to habit.name, edit_user_habit_path(current_user,habit.id) %></h3>
  </div>
  <div class="panel-body">

  <% if !habit.chains[0].nil? %>
    <h4>Your <%= habit.name.downcase %> chain is <%= habit.latest_chain_length %> days long!</h4>
    <div id=<%= habit.name.gsub(/\s/,"-") + "-timeline" %> style="height: 160px;"></div>  
  <% else %>
    <h4><%= @no_chains_message %></h4>
  <% end %>

  </div>
</div>