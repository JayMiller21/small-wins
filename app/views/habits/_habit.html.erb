<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= habit.name %></h3>
  </div>
  <div class="panel-body">

  <% if !habit.chains[0].nil? %>
    <div id=<%= habit.name.gsub(/\s/,"-") + "-timeline" %> style="height: 120px;"></div>  

    <p>Your current chain is <%= habit.latest_chain_length %> days long!</p>
  <% else %>
    <%= @no_chains_message %>
  <% end %>
    
<!--     <p>Your previous longest chain was <%# habit.previous_longest_chain_length %> days long.</p> -->

    <div>
      <%= link_to 'Update Chain', edit_user_habit_path(current_user,habit), class: "btn btn-default", role: "button" %>
    </div>

  </div>
</div>